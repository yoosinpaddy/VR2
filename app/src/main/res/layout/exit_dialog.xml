<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#f5f5f5" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:id="@+id/imgExitLogo" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/exit_panagola"/>
    <View android:background="#d7d7d7" android:layout_width="match_parent" android:layout_height="2dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/imgExitCancel" android:padding="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@drawable/exit_cancel" android:layout_weight="1"/>
        <View android:background="#d7d7d7" android:layout_width="1dp" android:layout_height="match_parent"/>
        <ImageView android:id="@+id/imgExit" android:padding="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@drawable/exit_off" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
